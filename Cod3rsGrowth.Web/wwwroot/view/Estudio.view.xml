<mvc:View xmlns:tnt="sap.tnt"
   controllerName="ui5.cod3rsgrowth.controller.Estudio"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
   <Page title="{i18n>listaEstudio}">
      <customHeader>
          <Toolbar>
             <Title text="{i18n>tituloAgendamentoEmEstudio}" titleStyle="H3" class="sapUiResponsiveMargin"/>         
          </Toolbar>
       </customHeader>
   <List id="listaEstudio"
   class="sapUiResponsiveMargin"
   growing="true"
   growingThreshold="20"
   sticky="ColumnHeaders,HeaderToolbar"
   width="auto"
   items="{listaEstudio>/}">
      <headerToolbar>
         <Toolbar>
            <Title text="{i18n>listaEstudio} ({= ${listaEstudio>/}.length})" titleStyle="H3"/>
            <ToolbarSpacer/>
            <SearchField 
            id="searchField"
            width="25%"
            placeholder="{i18n>textoDaBarraDePesquisa}"/>
         </Toolbar>
      </headerToolbar>
		<CustomListItem type="Navigation">
         <HBox>
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
               <Title text="{listaEstudio>nome}"/>
                  <ObjectStatus text="{path: 'listaEstudio>estaAberto', formatter: '.formatter.formatarEstaAberto'}"/>
            </VBox>
         </HBox>
		</CustomListItem>
	</List>
</Page>
</mvc:View>